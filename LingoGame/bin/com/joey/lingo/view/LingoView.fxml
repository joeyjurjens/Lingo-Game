<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.joey.lingo.LingoViewController">
   <children>
      <Pane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text fontSmoothingType="LCD" layoutX="109.0" layoutY="47.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Guess the six-letter word!">
               <font>
                  <Font name="Verdana Bold" size="26.0" />
               </font>
            </Text>
            <Label layoutX="242.0" layoutY="87.0" text="Lingo Word:">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Text fx:id="fxLingoWord" fill="RED" layoutX="261.0" layoutY="149.0" strokeType="OUTSIDE" strokeWidth="0.0" text="******">
               <font>
                  <Font name="System Italic" size="30.0" />
               </font>
            </Text>
            <Label fx:id="fxLabelGuess" layoutX="241.0" layoutY="214.0" text="Enter your guess">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="fxUserGuess" layoutX="226.0" layoutY="244.0" />
            <Button fx:id="fxButtonGuess" layoutX="262.0" layoutY="282.0" mnemonicParsing="false" onAction="#onClickButtonGuess" text="TRY GUESS" />
            <Label fx:id="fxLabelAttemptsLeft" layoutX="14.0" layoutY="340.0" text="ATTEMPTS LEFT: 10">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Label>
            <Button fx:id="fxRestartGame" layoutX="457.0" layoutY="343.0" mnemonicParsing="false" onAction="#restartGame" text="RESTART GAME" />
            <Button layoutX="431.0" layoutY="244.0" mnemonicParsing="false" onAction="#clearUserGuessText" text="CLEAR" />
         </children>
      </Pane>
   </children>
</AnchorPane>
